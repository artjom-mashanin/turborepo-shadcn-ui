// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("ADART_DB_URL")
  directUrl = env("ADART_DB_DIRECT_URL")
}


// TODO: maybe it makes sense to unify those 2? (probs not)
model Customer {
  id        String    @id @default(cuid())
  authId    String    @unique // Add index for this
  email     String    @unique
  name      String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Talent {
  id        String    @id @default(cuid())
  authId    String    @unique // Add index for this
  email     String    @unique
  name      String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}